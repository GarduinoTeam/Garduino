<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:backgroundTint="@color/colorPrimary"
    android:background="@drawable/pop_up_radius">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/ruleName">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/editorLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ruleNameDescription"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/dim_5"
                android:layout_margin="@dimen/dim_18"/>

            <EditText
                android:id="@+id/editTextCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/ruleName"
                android:inputType="text"
                android:layout_marginBottom="@dimen/dim_5"
                android:layout_margin="@dimen/dim_18"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/editorLayout"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/createRule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnRuleNameCreate"
                    android:background="@drawable/custom_button"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:id="@+id/cancelRule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnRuleNameCancel"
                    android:background="@drawable/custom_button_cancel"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
    </RelativeLayout>

</RelativeLayout>