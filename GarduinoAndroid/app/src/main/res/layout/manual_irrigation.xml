<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tvManualIrrigation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual Irrigation"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"

        />

    <TextView
        android:id="@+id/tvManualIrrigation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Specify the amount of time in minutes that you want the irrigation device to work:"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numeric input box"
        android:inputType="number"
        android:layout_marginBottom="20dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >

        <Button
            android:id="@+id/btnMI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="START"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#000000"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

</LinearLayout>