<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp">

        <LinearLayout
            android:id="@+id/editTextCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/deleteCondition"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@drawable/delete_icon"
                    android:focusable="false"
                    android:importantForAccessibility="no" />
                <TextView
                    android:id="@+id/textVieweEditCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editTemperatureIrrig" />

                <EditText
                    android:id="@+id/editTextEditCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/measureEditCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editTemperatureIrrigC"
                    android:layout_marginRight="@dimen/dim_18"
                    />

                <Switch
                    android:id="@+id/switchEditCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:importantForAccessibility="no"/>


        </LinearLayout>
</RelativeLayout>